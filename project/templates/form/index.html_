<!--<script src="https://cdn.jsdelivr.net/gh/brutusin/json-forms@1.6.3/dist/js/brutusin-json-forms-bootstrap.min.js"></script>-->


<script>
  $(document).ready(function () {

    var schema = {
          "comment": {
            "type": "string",
            "title": "Your thoughts"
          },
          "comment2": {
            "type": "string",
            "title": "Your thoughts",
            "description": "Describe how you feel with a rather long adjective-like series of words"
          },
          "comment3": {
            "type": "number",
            "title": "Ez egy number t√≠pusu..."
          },
        }

    var form1 = [
    {
      "key": "comment",
      "type": "textarea",
      "id": "nahalloooo",
    },
    {
      "key": "comment2",
      "type": "textarea",
      "id": "sziaszeva",
    },
    {
      "key": "comment3",
      "type": "text",
      "id": "egyedi_id888",
    },
    {
        "type": "submit",
        "title": "Submit"
      }
  ]



    var value = {
      comment: 'Sikler Daniel 5', comment2: 'az', comment3: 111
    }

    $('form').jsonForm({
      "schema": schema,
      "form": form1,
      "value":value,
      

      "onSubmit": function (errors, values) {
        if (errors) {
          alert('Check the form for invalid values!');
          return;
        }
        // "values" follows the schema, yeepee!
        console.log(values);
      }

    });
  })
</script>






